<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ricatalog.ricatalog">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/rilogo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true">
        <activity android:name=".activity.CartActivity"></activity>
        <activity
            android:name=".activity.ProductDetail"
            android:parentActivityName=".activity.ProductActivity" />
        <activity
            android:name=".activity.EditProfileActivity"
            android:parentActivityName=".activity.MainActivity" />
        <activity
            android:name=".activity.ProductActivity"
            android:parentActivityName=".activity.SubCategoryActivity" />
        <activity android:name=".activity.ZoomInActivity" />
        <activity
            android:name=".activity.SubCategoryActivity"
            android:parentActivityName=".activity.MainActivity" />
        <activity android:name=".activity.MainActivity" />
        <activity android:name=".activity.LoginActivity" />
        <activity android:name=".activity.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <service
            android:name=".service.MessagingFirebase"
            android:exported="true">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>
    </application>

</manifest>